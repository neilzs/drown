# hello_world.kv

# Mengatur tata letak dan penataan antarmuka pengguna
BoxLayout:
    orientation: 'vertical'

    # Menempatkan Label di dalam layout
    Label:
        text: 'Hello, World!'

    # Menempatkan Button di dalam layout
    Button:
        text: 'Click Me!'
        on_press: app.on_button_click(root)
